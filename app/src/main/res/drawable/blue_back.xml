<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 实心 -->
    <solid android:color="#01AFDA" />
    <!-- 圆角 -->
    <corners android:radius="360dp" />
    <stroke
        android:width="10dp"
        android:color="#009DC1" />
    <!-- 边距 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    <!-- 大小 -->
    <size android:width="95dp"
        android:height="95dp" />
</shape>